<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/rootButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:text="âœ“"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/sevenButton"
            app:layout_constraintEnd_toStartOf="@+id/sevenButton" />

        <Button
            android:id="@+id/squareButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:text="^"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneButton"
            app:layout_constraintEnd_toStartOf="@+id/oneButton" />

        <Button
            android:id="@+id/logButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:inputType="text"
            android:text="log"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/zeroButton"
            app:layout_constraintEnd_toStartOf="@+id/zeroButton" />

        <Button
            android:id="@+id/piButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:inputType="text"
            android:text="Pi"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/logButton"
            app:layout_constraintEnd_toStartOf="@+id/logButton"
            app:layout_constraintStart_toStartOf="@+id/tanButton" />

        <Button
            android:id="@+id/cosButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:inputType="text"
            android:text="Cos"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/factorButton"
            app:layout_constraintEnd_toStartOf="@+id/factorButton"
            app:layout_constraintStart_toStartOf="@+id/sinButton" />

        <Button
            android:id="@+id/sinButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:inputType="text"
            android:text="Sin"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/rootButton"
            app:layout_constraintEnd_toStartOf="@+id/rootButton" />

        <Button
            android:id="@+id/tanButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:inputType="text"
            android:text="Tan"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/squareButton"
            app:layout_constraintEnd_toStartOf="@+id/squareButton"
            app:layout_constraintStart_toStartOf="@id/cosButton" />

        <Button
            android:id="@+id/factorButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:inputType="text"
            android:text="!"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/fourButton"
            app:layout_constraintEnd_toStartOf="@+id/fourButton" />

        <EditText
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberSigned|numberDecimal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#595858"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/newNumber"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberSigned|numberDecimal"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="#595858"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/operation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/operation"
            app:layout_constraintTop_toBottomOf="@id/result"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/operation"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg"
            android:ems="10"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <Button
            android:id="@+id/sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:text="7"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/eightButton"
            app:layout_constraintEnd_toStartOf="@+id/eightButton" />

        <Button
            android:id="@+id/fourButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:text="4"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/fiveButton"
            app:layout_constraintEnd_toStartOf="@+id/fiveButton" />

        <Button
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:text="1"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/twoButton"
            app:layout_constraintEnd_toStartOf="@+id/twoButton" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_land"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fiveButton"
            app:layout_constraintStart_toStartOf="@id/fiveButton"
            app:layout_constraintTop_toBottomOf="@+id/fiveButton" />

        <Button
            android:id="@+id/threeButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_land"
            android:text="3"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/twoButton"
            app:layout_constraintStart_toEndOf="@id/twoButton" />

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_land"
            android:text="0"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/dotButton"
            app:layout_constraintEnd_toStartOf="@+id/dotButton" />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_land"
            android:text="."
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/twoButton"
            app:layout_constraintStart_toStartOf="@id/twoButton"
            app:layout_constraintTop_toBottomOf="@id/twoButton" />

        <Button
            android:id="@+id/negButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_land"
            android:text="+/-"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/dotButton"
            app:layout_constraintStart_toEndOf="@id/dotButton" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_land"
            android:text="5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/eightButton"
            app:layout_constraintStart_toStartOf="@+id/eightButton"
            app:layout_constraintTop_toBottomOf="@+id/eightButton" />

        <Button
            android:id="@+id/sixButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_land"
            android:text="6"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/fiveButton"
            app:layout_constraintStart_toEndOf="@+id/fiveButton" />

        <Button
            android:id="@+id/eightButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_land"
            android:text="8"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newNumber" />

        <Button
            android:id="@+id/nineButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_land"
            android:text="9"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/eightButton"
            app:layout_constraintStart_toEndOf="@id/eightButton" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_operation_land"
            android:text="Ã·"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/nineButton"
            app:layout_constraintStart_toEndOf="@id/nineButton" />

        <Button
            android:id="@+id/mulButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_operation_land"
            android:text="Ã—"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/sixButton"
            app:layout_constraintStart_toEndOf="@id/sixButton" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_operation_land"
            android:text="+"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/negButton"
            app:layout_constraintStart_toEndOf="@id/negButton" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_equal_land"
            android:text="="
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/addButton"
            app:layout_constraintEnd_toEndOf="@id/modButton"
            app:layout_constraintStart_toEndOf="@id/addButton" />

        <Button
            android:id="@+id/modButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_operation_land"
            android:text="%"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/minusButton"
            app:layout_constraintEnd_toEndOf="@id/bracketButton"
            app:layout_constraintStart_toEndOf="@id/minusButton" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_operation_land"
            android:text="-"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/threeButton"
            app:layout_constraintStart_toEndOf="@id/threeButton" />

        <Button
            android:id="@+id/bracketButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_operation_land"
            android:text="âŒ«"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/mulButton"
            app:layout_constraintEnd_toEndOf="@id/clearButton"
            app:layout_constraintStart_toEndOf="@id/mulButton" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_clear_land"
            android:text="AC"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/divideButton"
            app:layout_constraintStart_toEndOf="@id/divideButton" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>